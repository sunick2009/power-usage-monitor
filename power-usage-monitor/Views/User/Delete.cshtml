@model power_usage_monitor.Models.User

@{
    ViewData["Title"] = "刪除用戶";
}

<h1>刪除用戶</h1>

<h3>你確定要刪除這個用戶?</h3>
<div>
    <dl class="row">
        <dt class = "col-sm-2">
            用戶名稱
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UserName)
        </dd>
        <dt class = "col-sm-2">
            用戶的e-mail
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UserEmail)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="UserName" />
        <input type="submit" value="刪除" class="btn btn-danger" /> |
        <a asp-action="Index">回到用戶列表</a>
    </form>
</div>
